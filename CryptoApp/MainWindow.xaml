<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CryptoApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:CryptoApp.Helpers.Converters"
        xmlns:vm="clr-namespace:CryptoApp.ViewModels" 
        xmlns:views="clr-namespace:CryptoApp.Views"
        Title="CryptoApp" Height="600" Width="800"
        mc:Ignorable="d">
    <Window.Resources>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <views:MainPageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CryptoDetailViewModel}">
            <views:CryptoDetailView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
