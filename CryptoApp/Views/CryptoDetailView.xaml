<UserControl x:Class="CryptoApp.Views.CryptoDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoApp.Views" 
             xmlns:conv="clr-namespace:CryptoApp.Helpers.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:DescriptionConverter x:Key="DescriptionConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Back" Command="{Binding BackCommand}" Width="60"/>
            <TextBlock Text="{Binding CryptoCurrency.Name}" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding CryptoCurrency.Image.Large}" Height="120" Width="120" Grid.Column="0" Margin="0,0,10,0"/>

                    <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CryptoCurrency.Symbol}" FontSize="18"/>
                        <TextBlock Text="Current price (USD):" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CryptoCurrency.MarketData.CurrentPrice[usd]}"/>
                        <Button Content="Open site" Command="{Binding OpenInBrowserCommand}" Width="120" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Markets:" FontWeight="Bold" Margin="0,10,0,5"/>
                <DataGrid ItemsSource="{Binding CryptoCurrency.Tickers}" AutoGenerateColumns="False" 
                          Height="250" CanUserAddRows="False" CanUserDeleteRows="False"
                          HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Exchange" Binding="{Binding Market.Name}" Width="Auto"/>
                        <DataGridTextColumn Header="Pair" Binding="{Binding Base}" Width="Auto"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Last}" Width="Auto"/>
                        <DataGridTextColumn Header="Volume" Binding="{Binding Volume}" Width="Auto"/>
                        <DataGridTemplateColumn Header="Action" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Go" 
                                            Command="{Binding DataContext.OpenTickerInBrowserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding TradeUrl}"
                                            Width="100"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Text="{Binding CryptoCurrency.Description.En, Converter={StaticResource DescriptionConverter}}" TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
