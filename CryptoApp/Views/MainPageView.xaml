<UserControl x:Class="CryptoApp.Views.MainPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoApp.Views"
             xmlns:conv="clr-namespace:CryptoApp.Helpers.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>

    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBox Width="200" Height="25"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="100"
                     Height="25"
                     Margin="0,0,10,0"
                     HorizontalAlignment="Right"
                     Text="{Binding LoadCount, UpdateSourceTrigger=PropertyChanged}"
                     PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                     KeyDown="NumberOnlyTextBox_KeyDown"/>
            <Button Content="Load" 
                    Width="80"
                    Height="25"
                    HorizontalAlignment="Right"
                    Command="{Binding LoadCommand}" 
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
        </StackPanel>
        <ListView ItemsSource="{Binding Currencies}"
                  SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" Width="40" DisplayMemberBinding="{Binding MarketCapRank}"/>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Symbol" Width="80" DisplayMemberBinding="{Binding Symbol}"/>
                    <GridViewColumn Header="Price (USD)" Width="120" DisplayMemberBinding="{Binding CurrentPrice}"/>
                    <GridViewColumn Header="Market Cap" Width="150" DisplayMemberBinding="{Binding MarketCap}"/>
                    <GridViewColumn Header="Change 24h (%)" Width="120" DisplayMemberBinding="{Binding PriceChangePercentage24h}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
